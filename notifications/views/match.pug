<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="/style.css")
		script(src="/script.js")
		title Document
	body.center
		p(aria-live="polite").screenreader
		div.match-wrapper
			div.time 
				p=match.minuut
			h1=match.team_thuis.naam + " vs " + match.team_uit.naam
			div.score
				p.score_home=match.team_thuis.score
				p.spacer -
				p.score_out=match.team_uit.score

			a(href="/match?id=" + match.id) Update
